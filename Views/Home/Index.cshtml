@model IEnumerable<CRUD.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Welcome to see our products range</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h3>Three Cheapest products</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
